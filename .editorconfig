root = true

[*]
# Don't use tabs for indentation.
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# (Please don't specify an indent_size here; that has too many unintended consequences.)

[*.json]
indent_size = 4

[*.cs]
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false
